<h1>search_courses</h1>

<%= form_tag(courses_path, method: "get") do %>
  <table>
    <thead>
      <tr>
      <th>課程名稱</th>
      <th>授課老師</th>
      <th>上課地點</th>
      <th>上課時間</th>
      <th>學分數</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= text_field_tag(:name) %></td>
        <td><%= text_field_tag(:teacher) %></td>
        <td><%= text_field_tag(:location) %></td>
        <td><%= text_field_tag(:time) %></td>  
        <td><%= text_field_tag(:credits) %></td>  
        <td><%= submit_tag("search")%></td>  
      </tr>
    </tbody>
  </table>
   <% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Teacher</th>
      <th>Location</th>
      <th>Time</th>
      <th>Credits</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.teacher %></td>
        <td><%= course.location %></td>
        <td><%= course.time %></td>
        <td><%= course.credits %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
